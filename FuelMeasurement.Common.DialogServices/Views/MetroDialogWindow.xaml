<mah:MetroWindow  x:Class="FuelMeasurement.Common.DialogModule.Views.MetroDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        mah:ShowMaxRestoreButton="False"
        mah:ShowMinButton="False"
        SizeToContent="Height"
        SaveWindowPosition="False"
                  ShowCloseButton="False"
        ShowTitleBar="False"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
                  BorderThickness="3"
                  MinHeight="300"
                  MaxHeight="500"
        Title="{Binding Title}"  ContentRendered="MetroWindow_ContentRendered" Closed="MetroWindow_Closed" Loaded="MetroWindow_Loaded"
        >
</mah:MetroWindow>
